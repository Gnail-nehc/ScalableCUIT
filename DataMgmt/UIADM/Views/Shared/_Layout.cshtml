<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - QA Data Management</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
       @* @Scripts.Render("~/bundles/modernizr")*@
		<script type="text/javascript" src="~/Scripts/jquery-1.7.1.js"></script>
		<script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        @if (null != @Session["PRJNAME"])
                        {
                            @Ajax.RouteLink(@Session["PRJNAME"].ToString(), "Default", null, new AjaxOptions { UpdateTargetId="body"}, new { title = "click to change project" })
                        }
                    </p>
                </div>
                <div class="float-right">
                    <section id="login"> 
                        @*Hello, <span class="username">@HttpContext.Current.User.Identity.Name</span>!*@
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Ajax.ActionLink("Global Setting", "Index", "GlobalSetting",null,new AjaxOptions { UpdateTargetId="body"}, new { title = "data in whole project" })</li>
                            <li>@Ajax.ActionLink("Test Data", "Index", "TestData",null,new AjaxOptions { UpdateTargetId="body"}, new { title = "data used in test cases" })</li>
                            <li>@Ajax.ActionLink("Control Data", "Index", "Control",null,new AjaxOptions { UpdateTargetId="body"}, new { title = "data for controls under test" })</li>
                            @*<li>@Ajax.ActionLink("Manage Project","Index","ViewProjects",null, new AjaxOptions { UpdateTargetId="body"}, new { title = "manage all projects" })</li>*@
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <span><a href="mailto:lennie.chen@axiscapital.com" target="_blank">Contact author |</a></span>
                   @* <span class="copyRight">| Copyright ©2013 Lennie Chen</span> | *@
                    <span class="copyRight">based on ASP.NET MVC 4</span>
                </div>
            </div>
        </footer>
		
        @RenderSection("scripts", required: false)
    </body>
    
</html>
